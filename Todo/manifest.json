{
    "manifest_version": 3,
    "name": "Creative To-Do List",
    "version": "1.0",
    "description": "A creative and polished to-do list Chrome extension with animations and vibrant colors.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": ["storage"]
  }
  